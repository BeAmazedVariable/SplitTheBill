<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:gradientRadius="100"
                android:centerX="0%"
                android:centerY="50%"
                android:centerColor="#7BDEFC"
                android:startColor="#03899E"
                android:endColor="#0AB6FF"
                android:type="radial"
                />

            <corners android:radius="100dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                android:gradientRadius="100"
                android:centerX="0%"
                android:centerY="50%"
                android:centerColor="#75D0EC"
                android:startColor="#037C8E"
                android:endColor="#0AA0E1"
                android:type="radial"
                />

            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:gradientRadius="100"
                android:centerX="0%"
                android:centerY="50%"
                android:centerColor="#75D0EC"
                android:startColor="#037C8E"
                android:endColor="#0AA0E1"
                android:type="radial"
                />

            <corners android:radius="100dp"/>
        </shape>
    </item>
</selector>